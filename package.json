{
  "name": "dicom-ts",
  "version": "0.1.0",
  "description": "DICOM standard implementation in TypeScript, ported from fo-dicom",
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build": "npm run build:cjs && npm run build:esm",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "generate:dict": "node scripts/generate-dict.mjs"
  },
  "keywords": [
    "dicom",
    "medical-imaging",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.19.11",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
